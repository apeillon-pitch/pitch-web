{
  "name": "sage",
  "private": true,
  "browserslist": [
    "extends @roots/browserslist-config/current"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "dev": "bud dev",
    "build": "bud build",
    "translate": "yarn translate:pot && yarn translate:update",
    "translate:pot": "wp i18n make-pot . ./resources/lang/sage.pot --include=\"app,resources\"",
    "translate:update": "for filename in ./resources/lang/*.po; do msgmerge -U $filename ./resources/lang/sage.pot; done; rm -f ./resources/lang/*.po~",
    "translate:compile": "yarn translate:mo && yarn translate:js",
    "translate:js": "wp i18n make-json ./resources/lang --pretty-print",
    "translate:mo": "wp i18n make-mo ./resources/lang ./resources/lang",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint resources/scripts",
    "lint:css": "stylelint \"resources/**/*.{css,scss,vue}\"",
    "test": "npm run lint"
  },
  "devDependencies": {
    "@popperjs/core": "^2.11.6",
    "@roots/bud": "6.4.5",
    "@roots/bud-eslint": "^6.5.1",
    "@roots/bud-postcss": "^6.5.3",
    "@roots/bud-prettier": "^6.5.1",
    "@roots/bud-sass": "^6.5.3",
    "@roots/bud-stylelint": "^6.5.1",
    "@roots/eslint-config": "^6.5.1",
    "@roots/sage": "6.4.5",
    "bootstrap": "^5.2.2",
    "postcss": "^8.4.21",
    "postcss-scss": "^4.0.6"
  },
  "dependencies": {
    "aos": "^2.3.4",
    "jquery": "^3.6.4",
    "select2": "^4.1.0-rc.0",
    "slick-carousel": "^1.8.1",
    "smooth-parallax": "^1.1.2"
  }
}
